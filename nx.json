{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": ["default"]
  },
  "plugins": [
    {
      "plugin": "@getlarge/nx-node-sea",
      "options": {
        "seaTargetName": "sea-build",
        "buildTarget": "build"
      }
    }
  ],
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [],
      "executor": "@nx/js:tsc",
      "options": {
        "rootDir": "src",
        "outputPath": "dist",
        "main": "src/index.ts",
        "tsConfig": "tsconfig.json",
        "additionalEntryPoints": ["src/tools/cli/*.ts", "src/examples/cli/*.ts"],
        "assets": [
          {
            "glob": "**/*.js",
            "input": "src/tools/cli",
            "output": "tools/cli"
          },
          {
            "glob": "**/*.js",
            "input": "src/examples/cli",
            "output": "examples/cli"
          }
        ],
        "postTargets": ["build-post"]
      },
      "configurations": {
        "production": {}
      }
    },
    "build-post": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "chmod +x dist/*.js dist/tools/cli/*.js dist/examples/cli/*.js",
          "cp src/tools/cli/*.js dist/tools/cli/ 2>/dev/null || true",
          "cp src/examples/cli/*.js dist/examples/cli/ 2>/dev/null || true"
        ],
        "parallel": false
      }
    }
  },
  "projects": {
    "mcp-chain-of-draft-prompt-tool": {
      "root": ".",
      "sourceRoot": "src",
      "projectType": "application",
      "targets": {}
    }
  }
}
